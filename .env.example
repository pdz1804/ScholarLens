# Environment Variables Template
# Copy this file to .env and fill in your values

# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini

# Google API Configuration
GOOGLE_API_KEY=your_google_api_key_here

# Embedding Model Configuration
EMBEDDING_MODEL=all-MiniLM-L6-v2
EMBEDDING_DIMENSION=384

# Vector Database Configuration
CHROMA_PERSIST_DIRECTORY=./data/chroma_db
FAISS_INDEX_PATH=./data/faiss_index

# System Configuration
LOG_LEVEL=INFO
MAX_WORKERS=4
CACHE_SIZE=1000

# Query Configuration - Retrieval K-values
DEFAULT_TOP_K=10
MAX_TOP_K=50
INITIAL_TOP_K=200
FINAL_TOP_K=20
RERANK_TOP_K=20

# Query Configuration - Similarity Thresholds  
MIN_SIMILARITY_THRESHOLD=0.7
SCORE_THRESHOLD=0.4

# Query Configuration - Hybrid Search
HYBRID_ALPHA=0.7
ENABLE_RERANK=true
ENABLE_SCORE_FILTERING=true
NORMALIZE_SCORES=true

# Data Configuration
DATASET_PATH=./data/arxiv_cs.csv
PROCESSED_DATA_PATH=./data/processed/
EMBEDDINGS_CACHE_PATH=./data/embeddings/

# API Configuration
API_HOST=localhost
API_PORT=8000
API_WORKERS=1

# Development Configuration
DEBUG=False
TESTING=False
